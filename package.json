{
  "name": "pravosleva-bot-2021",
  "version": "1.0.0",
  "description": "",
  "main": "server-dist/run.js",
  "scripts": {
    "start:pm2": "NODE_ENV=production pm2 start:prod npm --name pravosleva-bot-20211 -- run start",
    "dev": "yarn transpile-server:dev && NODE_ENV=development node --max-old-space-size=1024 server-dist/run.js",
    "start:prod": "yarn transpile-server:prod && NODE_ENV=production node --max-old-space-size=1024 server-dist/run.js",
    "build-fresh:prod": "yarn cleanup:server-dist && yarn transpile-server:prod",
    "transpile-server:prod": "tsc -p ./src/server && yarn quaint-express-env-copy:prod",
    "transpile-server:dev": "tsc -p ./src/server && yarn quaint-express-env-copy:dev",
    "quaint-express-env-copy:prod": "cp .env.prod server-dist/.env",
    "quaint-express-env-copy:dev": "cp .env.dev server-dist/.env",
    "cleanup:server-dist": "rm -rf ./server-dist/* !./server-dist/.gitkeep"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^16.6.1",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "socket.io": "^4.1.3",
    "telegraf": "3.38"
  }
}
