{
  "compilerOptions": {
    "target": "ES5",
    "downlevelIteration": true,
    "removeComments": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "outDir": "../../server-dist",
    "baseUrl": "../",
    "sourceMap": true,
    "esModuleInterop": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.js",
    "**/*.json"
  ]
}