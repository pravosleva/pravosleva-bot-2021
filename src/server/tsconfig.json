{
  "compilerOptions": {
    "target": "ES5",
    "downlevelIteration": true,
    "removeComments": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "outDir": "../../server-dist",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@cianHttpClient": ["./bot/withCianHelper/utils/httpClient"],
      "@autoruHttpClient": ["./bot/withAutoruHelper/utils/httpClient"]
    },
    "sourceMap": true,
    "esModuleInterop": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.js",
    "**/*.json"
  ]
}